<style>

    .toggle-switch-theme {
        position: relative;
        width: 65px;
        height: 30px;
        --light: #d8dbe0;
        --dark: #28292c;
        --link: rgb(27, 129, 112);
        --link-hover: rgb(24, 94, 82);
    }

    .switch-label-theme {
        padding: 0px;
        margin-top: 9px;
        position: absolute;
        width: 85%;
        height: 26px;
        background-color: #d8dbe0;
        border-radius: 25px;
        cursor: pointer;
        border: 3px solid #cccccc;
    }

    .checkbox {
        position: absolute;
        display: none;
    }

    .slider_theme {
        position: absolute;
        width: 100%;
        height: 100%;
        border-radius: 25px;
        -webkit-transition: 0.3s;
        transition: 0.3s;
    }

    .checkbox:checked ~ .slider_theme {
        background-color: #28292c;
    }

    .slider_theme::before {
        content: "";
        position: absolute;
        top: 1px;
        left: 1px;
        width: 20px;
        height: 18px;
        border-radius: 50%;
        box-shadow: inset 12px -4px 0px 0px #d8dbe0;
        background-color: black;
        -webkit-transition: 0.3s;
        transition: 0.3s;
        box-shadow: none;
        -webkit-box-shadow: none;
    }

    .checkbox:checked ~ .slider_theme::before {
        -webkit-transform: translateX(50px);
        -ms-transform: translateX(50px);
        -webkit-box-shadow: inset -11px 0px 0px 0px #d8dbe0;
        transform: translateX(26px);
        background-color: #28292c;
    }

    .header .header-left {
