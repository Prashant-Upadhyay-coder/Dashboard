<script>
    document.addEventListener('DOMContentLoaded', function () {
        const themeToggle = document.getElementById('theme-toggle');

        // Retrieve the dark mode preference from localStorage
        const isDarkModeEnabled = localStorage.getItem('darkMode');

        // If dark mode is enabled, set the toggle to checked and apply the dark mode theme
        if (isDarkModeEnabled === 'true') {
            themeToggle.checked = true;
            applyDarkTheme();
        }

        // Delegate the event handling to a parent element that is present in the DOM
        document.addEventListener('change', function (event) {
            if (event.target === themeToggle) {
                if (themeToggle.checked) {
                    applyDarkTheme();
                } else {
                    removeDarkTheme();
                }
                // Save user preference in localStorage
                localStorage.setItem('darkMode', themeToggle.checked);
            }
        });

        // Function to apply the dark mode theme
        function applyDarkTheme() {
            const header = document.querySelector('.header');
            const page = document.querySelector('body');
            const Footer = document.querySelector('footer');
            const card = document.querySelectorAll('[class*="card"]');
            const tbody = document.querySelectorAll('tbody');
            const sidey = document.querySelector('#sideMenu');
            const a = document.querySelectorAll('a');

            header.classList.add('dark-header');
            page.classList.add('page');
            Footer.classList.add('footer_them');
            sidey.classList.add('sidenav_them');

            card.forEach(function (crd) {
                crd.classList.add('theme_black');
            });

            a.forEach(function (anchor) {
                anchor.classList.add('dark-anchor');
            });

            tbody.forEach(function (w) {
                w.classList.add('dark-anchor');
            });
        }

        // Function to remove the dark mode theme
        function removeDarkTheme() {
            const header = document.querySelector('.header');
            const page = document.querySelector('body');
            const Footer = document.querySelector('footer');
            const card = document.querySelectorAll('[class*="card"]');
            const tbody = document.querySelectorAll('tbody');
            const sidey = document.querySelector('#sideMenu');
            const a = document.querySelectorAll('a');

            header.classList.remove('dark-header');
            page.classList.remove('page');
            Footer.classList.remove('footer_them');
            sidey.classList.remove('sidenav_them');

            card.forEach(function (crd) {
                crd.classList.remove('theme_black');
            });

            a.forEach(function (anchor) {
                anchor.classList.remove('dark-anchor');
            });

            tbody.forEach(function (w) {
                w.classList.remove('dark-anchor');
            });
        }
    });
</script>
