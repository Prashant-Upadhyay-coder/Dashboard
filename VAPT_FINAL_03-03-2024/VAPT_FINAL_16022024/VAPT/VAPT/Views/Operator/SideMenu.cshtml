<script>
    $(document).ready(function () {

        $("#toggleButton").click(function () {
            //    $("#sideMenu").toggleClass("collaps");
            if ($("#sideMenu").hasClass("collaps")) {
                // Sidebar is collapsed, rotate the right SVG
                $("#rightSVG").css("transform", "rotate(180deg)");
