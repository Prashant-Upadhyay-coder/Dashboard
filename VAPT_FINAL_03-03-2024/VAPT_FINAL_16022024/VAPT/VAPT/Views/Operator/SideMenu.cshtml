    #menuItems > a {
        text-decoration: none;
        color: black;
        padding: 0 10px;
        display: block;
    }

    #menuItems > li > a {
        text-decoration: none;
        padding: 0 10px;
        display: inline-flex;
        color: black;
        align-items: center;
        column-gap: 10px;
    }

        #menuItems > li > a > span.fa {
            font-size: 15px;
            font-weight: lighter;
        }

    ul#menuItems > li:hover {
        background-color: #f3f3f3; /*#263e50e0*/
